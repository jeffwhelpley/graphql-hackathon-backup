{
    "compilerOptions": {
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "outDir": "__build__",
        "rootDir": ".",
        "sourceRoot": "",
        "inlineSourceMap": true,
        "target": "es5",
        "lib": ["es6", "dom"],
        "baseUrl": ""
    },
    "exclude": [
        "node_modules/**/*",
        "__build__/**/*"
    ]
}
